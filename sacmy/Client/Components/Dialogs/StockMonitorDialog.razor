@using sacmy.Shared.ViewModels.LowStockViewModels
@if (IsVisible)
{
    <div class="modal fade show stock-monitor-dialog" style="display: block;" tabindex="-1" id="productMonitorDialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-bell dialog-icon"></i>
                        Set Stock Alert Threshold
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="OnClose"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="alert alert-info d-flex align-items-center mb-4">
                        <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                        <div>
                            You'll be notified when stock level drops to or below your threshold.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="threshold" class="form-label fw-medium">Notification Threshold</label>
                        <div class="input-group">
                            <input type="number"
                                   id="threshold"
                                   class="form-control form-control-lg"
                                   placeholder="Enter threshold value"
                                   min="1"
                                   @bind="Model.Threshold" />
                            <span class="input-group-text">units</span>
                        </div>
                        <div class="form-text text-muted">
                            Example: If you set 10, you'll be notified when stock reaches 10 or fewer units.
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="enablePush" checked>
                            <label class="form-check-label" for="enablePush">Push notifications</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light px-4" @onclick="OnClose">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="OnSave">
                        <i class="bi bi-bell-fill me-2"></i>
                        Set Alert
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public MonitorProductViewModel Model { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
}